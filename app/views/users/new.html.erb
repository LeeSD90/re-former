<%= form_tag users_path method: :post do %>
	<%= label_tag :username %>
	<%= text_field_tag :username %>

	<%= label_tag :email %>
	<%= text_field_tag :email %>

	<%= label_tag :password %>
	<%= password_field_tag :password %>

	<%= submit_tag "Submit" %>

<% end %>
